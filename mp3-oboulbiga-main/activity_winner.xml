<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WinnerActivity"
    android:background="@drawable/gold_medal">

    <Button
        android:id="@+id/button_shareAct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_shareAct_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/norm_text"
        android:textStyle="bold"
        android:padding="@dimen/norm_padding"
        />

    <TextView
        android:id="@+id/winner_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/winner_text"
        android:textStyle="bold" />

</RelativeLayout>
